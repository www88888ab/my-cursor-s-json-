    "clangd.path": "C:\\msys64\\mingw64\\bin\\clangd.exe",
    "clangd.arguments": [
        "--background-index",
        "--clang-tidy",
        "--completion-style=detailed",
        "--header-insertion=iwyu",
        "--header-insertion-decorators",
        "--format-style=file"
