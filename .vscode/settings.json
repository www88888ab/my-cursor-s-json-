    // 编辑器语法高亮颜色（适配护眼色背景）
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "comment",
                    "punctuation.definition.comment"
                ],
                "settings": {
                    "foreground": "#8D6E63",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": [
                    "keyword",
                    "storage.type",
                    "storage.modifier"
                ],
                "settings": {
                    "foreground": "#1A5C8C",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": [
                    "string",
                    "string.quoted"
                ],
                "settings": {
                    "foreground": "#8B4513"
                }
            },
            {
                "scope": [
                    "constant.numeric",
                    "constant.language"
                ],
                "settings": {
                    "foreground": "#B8860B"
                }
            },
            {
                "scope": [
                    "constant.other",
                    "entity.name.constant",
                    "variable.other.constant"
                ],
                "settings": {
                    "foreground": "#8B4513",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": [
                    "entity.name.function",
                    "support.function"
                ],
                "settings": {
                    "foreground": "#1A5C8C",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": [
                    "variable",
                    "variable.other",
                    "variable.parameter"
                ],
                "settings": {
                    "foreground": "#3E2723"
                }
            },
            {
                "scope": [
                    "entity.name.type",
                    "support.type"
                ],
                "settings": {
                    "foreground": "#8B008B"
                }
            }
        ]
    },
    // C/C++ IntelliSense 配置
    // 禁用 C/C++ 扩展的 IntelliSense，使用 clangd 代替
    "C_Cpp.intelliSenseEngine": "Disabled",
    "C_Cpp.autocomplete": "disabled",
    "C_Cpp.errorSquiggles": "disabled",
    "C_Cpp.suggestSnippets": true,
    "C_Cpp.enhancedColorization": "enabled",
    // C/C++ 代码格式化配置
    "C_Cpp.clang_format_path": "C:\\Program Files\\LLVM\\bin\\clang-format.exe",
    "C_Cpp.clang_format_style": "file",
    "editor.formatOnSave": true,
    "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": false,
    "C_Cpp.default.systemIncludePath": [],
